{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es6",
        "lib": [
            "DOM",
            "ES6",
            "DOM.Iterable",
            "ScriptHost",
            "ES2016.Array.Include"
        ],
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist/es6",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "skipLibCheck": true,
    },
    "include": [
        "lib/**/*"
    ]
}
